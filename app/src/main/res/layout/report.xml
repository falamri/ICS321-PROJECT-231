<!-- report_page.xml -->

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header -->
    <TextView
        android:id="@+id/reportHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reports"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="16dp"/>

    <!-- Filter Options -->
    <!-- Include filter options like date pickers or dropdowns here -->
    <!-- You can use DatePicker or Spinner widgets for filter options -->

    <!-- Report List 1: Blood Donations -->
    <TextView
        android:id="@+id/bloodDonationsHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. Blood Donations"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:layout_below="@+id/reportHeader"/>

    <!-- RecyclerView for Blood Donations -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bloodDonationsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bloodDonationsHeader"/>

    <!-- Report List 2: Blood Requests -->

    <!-- RecyclerView for Blood Requests -->

    <!-- Report List 3: Aggregated Amount by Blood Type -->
    <TextView
        android:id="@+id/aggregatedAmountHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. Aggregated Amount by Blood Type"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:layout_below="@+id/collectionDrivesRecyclerView"/>

    <!-- Placeholder for Pie Chart -->

    <!-- Report List 4: Collection Drives -->
    <TextView
        android:id="@+id/collectionDrivesHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4. Collection Drives"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:layout_below="@+id/bloodDonationsRecyclerView"/>

    <!-- RecyclerView for Collection Drives -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/collectionDrivesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/collectionDrivesHeader"/>

</RelativeLayout>
